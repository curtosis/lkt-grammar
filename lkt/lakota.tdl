itrs-subj-1du-pat-morph-lex-rule := itrs-subj-1per-lex-rule & itrs-subj-du-lex-rule & itrs-subj-pat-lex-rule.

itrs-subj-pl-lex-rule := itrs-pat-subj-pos-lex-rule-super &
