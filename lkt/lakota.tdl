tra-obj-1sg-pat-morph-lex-rule := tra-obj-1per-lex-rule & tra-obj-pat-lex-rule & tra-obj-sg-lex-rule.

tra-obj-2sg-pat-morph-lex-rule := tra-obj-2per-lex-rule & tra-obj-pat-lex-rule & tra-obj-sg-lex-rule.

tra-obj-3sg-pat-morph-lex-rule := tra-obj-3per-lex-rule & tra-obj-pat-lex-rule & tra-obj-sg-lex-rule.

tra-obj-1pl-pat-morph-lex-rule := tra-obj-1per-lex-rule & tra-obj-pl-lex-rule.

