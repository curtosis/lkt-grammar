itrs-subj-1pl-pat-morph-lex-rule := itrs-subj-1per-lex-rule & itrs-subj-pat-lex-rule & itrs-subj-pl-lex-rule.

itrs-subj-2pl-pat-morph-lex-rule := itrs-subj-2per-lex-rule & itrs-subj-pat-lex-rule & itrs-subj-pl-lex-rule.

itrs-subj-3pl-pat-morph-lex-rule := itrs-subj-3per-lex-rule & itrs-subj-pat-lex-rule & itrs-subj-pl-lex-rule.

itrs-subj-inanim-lex-rule := const-lex-rule & itrs-pat-subj-pos-lex-rule-super &
