itrs-subj-3coll-pat-human-morph-lex-rule := itrs-subj-3pl-pat-morph-lex-rule & itrs-subj-coll-lex-rule & itrs-subj-hum-lex-rule.

itrs-subj-3dist-pat-human-morph-lex-rule := itrs-subj-3pl-pat-morph-lex-rule & itrs-subj-dist-lex-rule & itrs-subj-hum-lex-rule.

tra-pat-obj-pos-lex-rule-super := add-only-no-ccont-rule & infl-lex-rule & tra-agt-subj-pos-rule-dtr &
  [ DTR tr-active-verb-lex ].

tra-obj-1per-lex-rule := tra-pat-obj-pos-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.COMPS.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.PER 1st ].

tra-obj-2per-lex-rule := tra-pat-obj-pos-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.COMPS.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.PER 2nd ].

tra-obj-3per-lex-rule := tra-pat-obj-pos-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.COMPS.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.PER 3rd ].

tra-obj-sg-lex-rule := tra-pat-obj-pos-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.COMPS.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.NUM sg ].

tra-obj-pl-lex-rule := tra-pat-obj-pos-lex-rule-super &
