itrs-subj-3pl-pat-inanim-morph-lex-rule := itrs-subj-3pl-pat-morph-lex-rule & itrs-subj-inanim-lex-rule.

itrs-subj-nonhum-lex-rule := infl-lex-rule & itrs-pat-subj-pos-lex-rule-super &
  [ SYNSEM.LOCAL.CAT.VAL.SUBJ.FIRST.LOCAL.CONT.HOOK.INDEX.PNG.GEND nonhuman ].

itrs-subj-3pl-pat-nonhuman-morph-lex-rule := itrs-subj-3per-lex-rule & itrs-subj-nonhum-lex-rule & itrs-subj-pat-lex-rule & itrs-subj-pl-lex-rule.

itrs-subj-hum-lex-rule := infl-lex-rule & itrs-pat-subj-pos-lex-rule-super &
